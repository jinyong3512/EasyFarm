<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#E8F4E9"
    tools:context=".MyRecordActivity">

    <ImageView
        android:id="@+id/imageView1"

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"

        android:src="@drawable/myrecord_image_dictionary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView1"

        android:layout_width="120dp"
        android:layout_height="60dp"

        android:gravity="center"

        android:text="New Text"
        android:textColor="#3C7845"
        android:textSize="22dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144" />


    <TextView
        android:id="@+id/textView2"

        android:layout_width="120dp"
        android:layout_height="20dp"

        android:gravity="center"

        android:text="New Text2"
        android:textColor="#4A9455"
        android:textSize="17dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

    <TextView
        android:id="@+id/textView3"

        android:layout_width="120dp"
        android:layout_height="20dp"

        android:gravity="center"

        android:text="New Text3"
        android:textColor="#7DBD86"
        android:textSize="15dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.861" />

    <ImageButton
        android:id="@+id/button1"

        android:layout_width="80dp"
        android:layout_height="80dp"

        android:adjustViewBounds="true"
        android:backgroundTint="#E8F4E9"
        android:scaleType="fitCenter"
        android:src="@drawable/myrecord_image_dictionary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/button2"

        android:layout_width="80dp"
        android:layout_height="80dp"

        android:adjustViewBounds="true"
        android:backgroundTint="#E8F4E9"
        android:scaleType="fitCenter"
        android:src="@drawable/myrecord_image_delete"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>